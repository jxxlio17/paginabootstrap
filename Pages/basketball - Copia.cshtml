@page
@model WebApplication2.Pages.BasketballCopiaModel
@{
    ViewData["Title"] = "Formulario de Contacto";
}

<div class="container mt-5">
    <h2 class="text-center">Formulario de Contacto</h2>

    @if (Model.Formulario.Enviado)
    {
        <div class="alert alert-success" role="alert">
            ¡Tu mensaje ha sido enviado con éxito!
        </div>
    }

    <form method="post" class="form-container">
        <div class="mb-3">
            <label asp-for="Formulario.Nombre" class="form-label">Nombre Completo</label>
            <input asp-for="Formulario.Nombre" class="form-control" placeholder="Tu nombre" required />
        </div>
        <div class="mb-3">
            <label asp-for="Formulario.Correo" class="form-label">Correo Electrónico</label>
            <input asp-for="Formulario.Correo" class="form-control" type="email" placeholder="tuemail@dominio.com" required />
        </div>
        <div class="mb-3">
            <label asp-for="Formulario.Asunto" class="form-label">Asunto</label>
            <input asp-for="Formulario.Asunto" class="form-control" placeholder="Asunto" required />
        </div>
        <div class="mb-3">
            <label asp-for="Formulario.Mensaje" class="form-label">Mensaje</label>
            <textarea asp-for="Formulario.Mensaje" class="form-control" rows="4" placeholder="Escribe tu mensaje aquí..." required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>
